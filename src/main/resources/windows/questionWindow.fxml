<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<TitledPane text="Question" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0">
        <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Now answering: " />
                  <Text fx:id="playerNickname" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
          <TextArea fx:id="questionText" editable="false" prefHeight="100.0" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></TextArea>
          <VBox fx:id="answersVBox" alignment="CENTER_LEFT" prefHeight="-1.0" prefWidth="-1.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></VBox>
            <StackPane fx:id="resultPane" />
          <Button fx:id="applyButton" defaultButton="true" mnemonicParsing="false" onAction="#onApplyAnswer" text="Apply answer">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
        </children>
      </VBox>
   </content>
</TitledPane>
