<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.QuestionWindowController">
  <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Now answering: " />
            <Text fx:id="playerNickname" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Text>
         </children></HBox>
    <TextArea fx:id="questionText" editable="false" prefWidth="600.0" wrapText="true" />
    <VBox fx:id="contentBox" alignment="CENTER_LEFT" prefHeight="-1.0" prefWidth="-1.0" />
    <Button fx:id="applyButton" mnemonicParsing="false" onAction="#onApplyAnswer" text="Apply answer" />
    <Text fx:id="resultText" strokeType="OUTSIDE" strokeWidth="0.0" text="" />
  </children>
</VBox>
